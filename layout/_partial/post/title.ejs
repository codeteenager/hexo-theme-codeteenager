<% if (post.link){ %>
  <h3 itemprop="name">
    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h3>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h3 itemprop="name">
      <a  href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h3>
  <% } else { %>
    <h3 itemprop="name">
      <%= post.title %>
    </h3>
  <% } %>
<% } %>